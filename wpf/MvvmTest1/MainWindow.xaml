<Window x:Class="MvvmTest1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MvvmTest1"
        xmlns:total="clr-namespace:MvvmTest1.Total"
        xmlns:test1="clr-namespace:MvvmTest1.Test1"
        xmlns:test2="clr-namespace:MvvmTest1.Test2"
        mc:Ignorable="d"
        WindowStyle="SingleBorderWindow" ResizeMode="CanResize" WindowState="Maximized"
        Title="MVVM Test" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate DataType = "{x:Type total:TotalViewModel}">
            <total:TotalView/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type test1:Test1ViewModel}">
            <test1:Test1View/>
        </DataTemplate>

        <DataTemplate DataType = "{x:Type test2:Test2ViewModel}">
            <test2:Test2View/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <Border DockPanel.Dock="Left" BorderBrush="Black" BorderThickness="0,0,1,0">
            <ItemsControl ItemsSource="{Binding PageViewModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding Name}"
                                Command="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                CommandParameter="{Binding }"
                                Margin="2,5" Width="100" Height="50" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>

        <ContentControl Content="{Binding CurrentPageViewModel}" />
    </DockPanel>

</Window>
